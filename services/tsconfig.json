{
    "compilerOptions": {
        "target": "es2020",
        "strict": true,
        "preserveConstEnums": true,
        "noEmit": true,
        "sourceMap": false,
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["*"]
        }
    },
    "include": ["functions/**/*.ts", "packages/**/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"],
    "ts-node": {
        "require": ["tsconfig-paths/register"],
        "esm": true
    }
}
